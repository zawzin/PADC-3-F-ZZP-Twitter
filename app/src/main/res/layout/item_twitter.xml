<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    android:layout_marginTop="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary">

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/nasalogo"
            android:scaleType="fitCenter"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            />
        <RelativeLayout
            android:id="@+id/rl_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_profile"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            >
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NASA"
                android:textColor="@color/icons"
                android:textSize="18sp"
                android:drawableTint="@color/icons"
                android:fontFamily="sans-serif"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check_circle_black_16dp"
                android:layout_marginTop="8dp"
                android:tint="@color/icons"
                android:layout_toRightOf="@id/tv_name"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\u0040NASA"
            android:layout_toRightOf="@id/rl_profile_name"
            android:textColor="@color/primary_light"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="4dp"/>
        <TextView
            android:id="@+id/tv_time_ago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\u00B7 1d"
            android:layout_toRightOf="@id/tv_location"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="4dp"
            android:textColor="@color/primary_light"
            android:textSize="18sp"
            android:fontFamily="sans-serif-condensed"
            />
        <TextView
            android:id="@+id/tv_post_brief"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=".@SpadeX is now tageting no earlier than Dec. 12 at 11.46am ET for the next cargo lunch to @Space_Station. Details: go.nasa.gov/2ksFGeM"
            android:layout_alignLeft="@id/rl_profile_name"
            android:layout_below="@id/rl_profile_name"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:textColor="@color/icons"
            android:layout_marginRight="36dp"
            android:lineSpacingMultiplier="1"
            android:maxLines="4"
            android:ellipsize="end"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
            android:drawableTint="@color/primary_light"
            android:layout_toRightOf="@id/tv_time_ago"
            android:layout_alignBaseline="@id/tv_time_ago"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"/>
        <ImageView
            android:id="@+id/iv_post_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/spacex"
            android:layout_below="@id/tv_post_brief"
            android:layout_alignLeft="@id/rl_profile_name"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"/>
        <LinearLayout
            android:id="@+id/fl_post_stastics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/rl_profile_name"
            android:layout_below="@id/iv_post_img"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:weightSum="4">
            <TextView
                android:id="@+id/tv_comment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="21"
                android:drawableLeft="@drawable/ic_chat_bubble_outline_black_24dp"
                android:drawableTint="@color/primary_light"
                android:textColor="@color/primary_light"
                android:layout_weight="1"
                android:drawablePadding="4dp"/>
            <TextView
                android:id="@+id/tv_retweet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="342"
                android:drawableLeft="@drawable/retweet"
                android:textColor="@color/primary_light"
                android:drawablePadding="4dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_fav"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1,320"
                android:textColor="@color/primary_light"
                android:drawableLeft="@drawable/ic_favorite_border_black_24dp"
                android:drawablePadding="4dp"
                android:drawableTint="@color/primary_light"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_mail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
                android:drawableTint="@color/primary_light"
                android:layout_weight="1"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
